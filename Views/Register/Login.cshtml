@model Hospital_Randevu.Models.User
@{

	Layout = "_LoginLayout";
}

<header>

	<div class="login">

		<div class="clinic">
			<div class="logo"><img src="../images/central.png" alt=""></div>
			<div class="select">
				<select name="" id="">
					<option value="">En<img src="./Flag_of_the_United_Kingdom_(1-2).svg" alt=""></option>
					<option value="">Tr<img src="./Flag_of_Turkey.svg.png" alt=""></option>
				</select>
			</div>

		</div>
		<div class="logUser">
			<div class="col-md-4">
				<p style="color:red">@ViewBag.err</p>
				<form asp-action="Login">
					
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-item">
						<span class="material-symbols-outlined">account_circle</span>
						<input type="text" name="Email" placeholder="Email" asp-for="Email">
						@* <span asp-validation-for="Email" class="text-danger"></span> *@
					</div>



					<div class="form-item">
						
						<span class="material-symbols-outlined">key</span>
						<input type="password" name="Password" placeholder="Password" asp-for="Password">
						@* <span asp-validation-for="Password" class="text-danger"></span> *@
					</div>

					
						<input type="submit" value="Login" class="btn " />
					
				</form>
				<button class="btnUp"><a asp-action="LogUp" asp-controller="Register">LogUp</a></button>
			
				
 
			</div>
		</div>

	</div>

	<div class="Icon">
	</div>

</header>
