@{
}
<body   class="p-body">
    @foreach (var item in Model)
    {
        <div class="container_d">

            <div class="doctor-card">

                <div class="doc-info">

                    <div class="d-image">
                        <img src="../images/@Html.DisplayFor(modelItem => item.image)" style="width:120px ; height:120px " />
                    </div>

                    <div class="doc-info1">
                        <div class="name">
                            <p for="">Dr. <br><span>@item.FullName</span></p>

                        </div>

                        <div class="information">

                            <div class="info-item">
                                <p>Specialty</p>
                                <hr>
                                <label for="">@item.specialty</label>
                            </div>

                            <div class="info-item">
                                <p>Contacts</p>
                                <hr>
                                <p>@item.PhoneNumber</p>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
           


        </div>



    }
</body>

